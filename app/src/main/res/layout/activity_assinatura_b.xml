<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_centerInParent="true"
    tools:context=".AssinaturaB">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:textStyle="bold"
            android:text="Assinatura Digital"
            android:textSize="40sp"
            android:textColor="#9E00FF"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Faça a sua assinatura no campo abaixo. Não precisa sair perfeita. Clique em avançar para finalizar o contrato, ou corrigir para refazer a assinatura"
            android:textSize="18sp"
            android:textColor="#000"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.github.gcacace.signaturepad.views.SignaturePad
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/signaturePad"/>

    </LinearLayout>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/corrigir"
            android:paddingHorizontal="20dp"
            android:textSize="18dp"
            android:textAllCaps="false"
            android:text="Corrigir"
            android:textColor="#9E00FF"
            android:background="#fff"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="24dp"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/avancar"
            android:paddingHorizontal="20dp"
            android:textSize="18dp"
            android:textAllCaps="false"
            android:text="Avançar"
            android:textColor="#fff"
            android:background="@drawable/borda_button"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="24dp"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>