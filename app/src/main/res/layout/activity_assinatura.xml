<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".AssinaturaA">

    <TextView
        android:textStyle="bold"
        android:text="Assinatura Digital"
        android:textSize="40sp"
        android:textColor="#9E00FF"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Precisamos que você faça uma assinatura de forma digital pelo próprio aplicativo. Basta usar o dedo para assinar. Não se preocupe em deixá-la perfeita"
        android:textSize="18sp"
        android:textColor="#000"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_next"
        android:paddingHorizontal="20dp"
        android:textSize="18dp"
        android:textAllCaps="false"
        android:text="Avançar"
        android:textColor="#fff"
        android:background="@drawable/borda_button"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="24dp"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>