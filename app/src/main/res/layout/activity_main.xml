<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:textStyle="bold"
        android:text="Olá!"
        android:textSize="40sp"
        android:textColor="#9E00FF"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Para iniciar, informe os dados abaixo."
        android:textSize="18sp"
        android:textColor="#000"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textStyle="italic"
        android:text="Nome Completo"
        android:textSize="18sp"
        android:textColor="#000"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/user_name"
        android:hint="Ex: João da Silva"
        android:background="@drawable/borda_edit_text"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:textStyle="italic"
        android:text="CPF"
        android:textSize="18sp"
        android:textColor="#000"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/user_CPF"
        android:hint="Ex: 123.123.123-12"
        android:background="@drawable/borda_edit_text"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:textStyle="italic"
        android:text="Número de Matrícula"
        android:textSize="18sp"
        android:textColor="#000"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/user_matricula"
        android:hint="Ex: 1231234-1"
        android:background="@drawable/borda_edit_text"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/user_tutorial"
        android:text="Onde Encontrar?"
        android:textSize="18sp"
        android:textColor="#9E00FF"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    
    <Button
        android:id="@+id/btn_next"
        android:paddingHorizontal="20dp"
        android:textSize="18dp"
        android:textAllCaps="false"
        android:text="Avançar"
        android:textColor="#fff"
        android:background="@drawable/borda_button"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="24dp"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>